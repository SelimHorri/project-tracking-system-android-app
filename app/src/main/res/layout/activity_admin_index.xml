<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.admin.AdminIndexActivity">


    <Button
        android:id="@+id/buttonAdminIndexManageEmployees"
        android:layout_width="221dp"
        android:layout_height="62dp"
        android:layout_marginTop="144dp"
        android:text="Manage employees"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAdminIndexManageDepartments"
        android:layout_width="225dp"
        android:layout_height="60dp"
        android:layout_marginTop="64dp"
        android:text="Manager Departments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAdminIndexManageEmployees" />

    <Button
        android:id="@+id/buttonAdminIndexManageLocations"
        android:layout_width="221dp"
        android:layout_height="60dp"
        android:layout_marginBottom="260dp"
        android:text="Manage Locations"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAdminIndexManageDepartments"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
