<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="@dimen/cardview_compat_inset_shadow"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewTitle"
                android:text="-"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            />
            <TextView
                android:id="@+id/textViewStartDate"
                android:text="-"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewEndDate"
                android:text="-"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewStatus"
                android:text="-"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/buttonMyCommits"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight=".1"
                    android:layout_gravity="center"
                    android:text="My_Commits"
                    android:background="@drawable/button_background"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                <Button
                    android:id="@+id/buttonAllCommits"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:text="All_Commits"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight=".1"
                    android:layout_gravity="center"
                    android:background="@drawable/button_background"
                />
                <Button
                    android:id="@+id/buttonNewCommit"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:text="New_Commit?"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight=".1"
                    android:layout_gravity="center"
                    android:background="@drawable/button_background"
                />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>